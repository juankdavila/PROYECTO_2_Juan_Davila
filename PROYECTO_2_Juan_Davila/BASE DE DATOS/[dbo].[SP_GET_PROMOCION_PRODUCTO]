ALTER PROCEDURE [dbo].[SP_GET_PROMOCION_PRODUCTO]
	@PI_ID_PRODUCTO INTEGER
AS
BEGIN
	
	SELECT isnull(SUM(MONTO_DESCUENTO),0) MONTO_DESCUENTO
	FROM PROMOCIONES_PRODUCTO
	WHERE ID_PRODUCTO=@PI_ID_PRODUCTO

END