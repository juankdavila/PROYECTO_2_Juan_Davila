ALTER PROCEDURE [dbo].[SP_GET_PROMOCION_CLIENTE]
	@PV_CEDULA VARCHAR(20)
AS
BEGIN
	
	SELECT isnull(SUM(MONTO_DESCUENTO),0) MONTO_DESCUENTO
	FROM PROMOCIONES_CLIENTES
	WHERE CEDULA=@PV_CEDULA

END